<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Paex3.ListaAE">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar - Eliminar" FontSize="24" HorizontalTextAlignment="Center"></Label>
            <Entry x:Name="txtID"></Entry>
            <Entry x:Name="txtNombre"></Entry>
            <Entry x:Name="txtApellido"></Entry>
            <Entry x:Name="txtEdad"></Entry>

            <Button x:Name="btnActualizar" Text="Actualizr"  Clicked="btnActualizar_Clicked"></Button>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"></Button>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>