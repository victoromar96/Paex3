<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Paex3.Registrar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registrar Estudiante" FontSize="24" HorizontalTextAlignment="Center"></Label>
            <Entry x:Name="txtID" Placeholder="ID"></Entry>
            <Entry x:Name="txtNombre" Placeholder="Nombre"></Entry>
            <Entry x:Name="txtApellido" Placeholder="Apellido"></Entry>
            <Entry x:Name="txtEdad" Placeholder="Edad"></Entry>
            <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>